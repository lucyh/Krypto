<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false" >

    <TextView
        android:id="@+id/goal_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/filler_num"
        android:textSize="150dp" />
        
     <Button
         android:id="@+id/main_menu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentRight="true"
         android:layout_marginBottom="15dp"
         android:layout_marginRight="20dp"
         android:minWidth="250dp"
         android:text="@string/menu"
         android:textSize="50dp" />
        
    <Button
        android:id="@+id/new_puzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_menu"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:minHeight="48dp"
        android:minWidth="250dp"
        android:onClick="newKryptoPuzzle"
        android:text="@string/new_puz"
        android:textSize="50dp" />
    
    <Button
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/num1"
        android:layout_alignBottom="@+id/num1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/num2"
        android:layout_marginRight="150dp"
        android:layout_marginTop="15dp"
        android:background="#D8D8D8"
        android:height="130dp"
        android:onClick="selectNumber"
        android:text="@string/filler_num"
        android:textSize="80dp"
        android:width="130dp" />
    
    <Button
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/num2"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="15dp"
        android:background="#D8D8D8"
        android:height="130dp"
        android:onClick="selectNumber"
        android:text="@string/filler_num"
        android:textSize="80dp"
        android:width="130dp" />

    <Button
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goal_num"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/num0"
        android:background="#D8D8D8"
        android:height="130dp"
        android:onClick="selectNumber"
        android:text="@string/filler_num"
        android:textSize="80dp"
        android:width="130dp" />

    <Button
        android:id="@+id/num0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/num2"
        android:layout_alignBottom="@+id/num2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:background="#D8D8D8"
        android:height="130dp"
        android:onClick="selectNumber"
        android:text="@string/filler_num"
        android:textSize="80dp"
        android:width="130dp" />

    <Button
        android:id="@+id/num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/num2"
        android:layout_alignBottom="@+id/num2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:background="#D8D8D8"
        android:height="130dp"
        android:onClick="selectNumber"
        android:text="@string/filler_num"
        android:textSize="80dp"
        android:width="130dp" />

    <Button
        android:id="@+id/divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:background="#D8D8D8"
        android:height="100dp"
        android:minWidth="100dp"
        android:onClick="selectOperator"
        android:text="@string/divide"
        android:textSize="60dp" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/add"
        android:background="#D8D8D8"
        android:height="100dp"
        android:minWidth="100dp"
        android:onClick="selectOperator"
        android:text="@string/subtract"
        android:textSize="60dp" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_menu"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="40dp"
        android:background="#D8D8D8"
        android:height="100dp"
        android:minWidth="100dp"
        android:onClick="selectOperator"
        android:text="@string/add"
        android:textSize="60dp" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/add"
        android:layout_toLeftOf="@id/divide"
        android:layout_marginRight="40dp"
        android:background="#D8D8D8"
        android:height="100dp"
        android:minWidth="100dp"
        android:onClick="selectOperator"
        android:text="@string/multiply"
        android:textSize="60dp" />

    <ImageView
        android:id="@+id/box1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/add"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/box_desc"
        android:maxHeight="160dp"
        android:maxWidth="160dp"
        android:src="@drawable/box" />
    
    <TextView
        android:id="@+id/selNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/box1"
        android:layout_alignLeft="@+id/box1"
        android:layout_alignRight="@+id/box1"
        android:layout_alignTop="@+id/box1"
        android:clickable="true"
        android:gravity="center"
        android:onClick="clearText"
        android:text="@string/filler_num"
        android:textSize="125dp" />

    <ImageView
        android:id="@+id/box2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/box1"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_marginRight="40dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/box_desc"
        android:maxHeight="160dp"
        android:maxWidth="160dp"
        android:src="@drawable/box" />
    
    <TextView
        android:id="@+id/selNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/box2"
        android:layout_alignLeft="@+id/box2"
        android:layout_alignRight="@+id/box2"
        android:layout_alignTop="@+id/box2"
        android:clickable="true"
        android:gravity="center"
        android:onClick="clearText"
        android:text="@string/filler_num"
        android:textSize="125dp" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/box1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/circle_desc"
        android:maxHeight="140dp"
        android:maxWidth="140dp"
        android:src="@drawable/circle" />
    
    <TextView
        android:id="@+id/selOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/circle"
        android:layout_alignRight="@+id/circle"
        android:layout_alignTop="@+id/selNum1"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:gravity="center"
        android:onClick="clearText"
        android:text="@string/multiply"
        android:textSize="125dp" />

    <ImageView
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="23dp"
        android:layout_marginTop="14dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/right_arrow"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:src="@drawable/equals" />

    <ImageView
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="14dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/up_arrow"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:src="@drawable/reset" />

</RelativeLayout>